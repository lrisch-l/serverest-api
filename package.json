{
  "name": "serverest-api",
  "version": "1.0.0",
  "description": "Automated API tests for the ServeRest project using Cypress",
  "main": "index.js",
  "scripts": {
  "pretest": "rmdir /s /q cypress\\reports",
  "test": "npx cypress run",
  "test:api": "npx cypress run --env grep=@api",
  "cy:open": "npx cypress open",
  "cy:run": "npx cypress run",
  "cy:run:headed": "npx cypress run --headed --browser chrome",
  "format": "prettier --write \"cypress/**/*.js\"",
  "report:usuarios": "npx cypress run --spec 'cypress/e2e/api/usuarios/usuarios.cy.js' --reporter cypress-mochawesome-reporter --reporter-options reportDir=cypress/reports,overwrite=true,html=true,json=true,inlineAssets=true,reportFilename=usuarios-report.html",
  "report:produtos": "npx cypress run --spec 'cypress/e2e/api/produtos/produtos.cy.js' --reporter cypress-mochawesome-reporter --reporter-options reportDir=cypress/reports,overwrite=true,html=true,json=true,inlineAssets=true,reportFilename=produtos-report.html",
  "report:login": "npx cypress run --spec 'cypress/e2e/api/login/login.cy.js' --reporter cypress-mochawesome-reporter --reporter-options reportDir=cypress/reports,overwrite=true,html=true,json=true,inlineAssets=true,reportFilename=login-report.html",
  "report:carrinhos": "npx cypress run --spec 'cypress/e2e/api/carrinhos/carrinhos.cy.js' --reporter cypress-mochawesome-reporter --reporter-options reportDir=cypress/reports,overwrite=true,html=true,json=true,inlineAssets=true,reportFilename=carrinhos-report.html",
  "report:all:split": "npm run report:usuarios && npm run report:produtos && npm run report:login && npm run report:carrinhos",
  "report:api": "cypress run --env grep=@api --reporter cypress-mochawesome-reporter",
  "report:regression": "cypress run --env grep=@regression --reporter cypress-mochawesome-reporter",
  "report:smoke": "cypress run --env grep=@smoke --reporter cypress-mochawesome-reporter",
  "report:tag": "cypress run --env grep=$CYPRESS_grep --reporter cypress-mochawesome-reporter"
},
  "keywords": [
    "cypress",
    "api",
    "testing",
    "automation",
    "serverest"
  ],
  "author": "Leandro Risch",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "cypress": "^14.5.4",
    "cypress-grep": "^3.0.4",
    "cypress-mochawesome-reporter": "^4.0.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.3.0",
    "prettier": "^3.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lrisch-l/serverest-api.git"
  },
  "bugs": {
    "url": "https://github.com/lrisch-l/serverest-api/issues"
  },
  "homepage": "https://github.com/lrisch-l/serverest-api#readme"
}
